# Managed by Ansible
# kube-apiserver environment options
{% if kube_apiserver_args is defined %}

# kube-apiserver command line arguments
KUBE_APISERVER_ARGS=\
{% for k,v in kube_apiserver_args.items() %}
{% if v is sameas true %}
  --{{ k }} {{ "\\" if not loop.last }}
{% else %}
  --{{ k }}={{ v | quote }} {{ "\\" if not loop.last }}
{% endif %}
{% endfor %}
{% endif %}
